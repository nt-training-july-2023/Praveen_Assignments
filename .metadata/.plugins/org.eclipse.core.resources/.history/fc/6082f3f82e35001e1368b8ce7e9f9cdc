package com.praveen.empMan.repo;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Repository;

import com.praveen.empMan.model.Employee;

@Repository
public class EmpRepository {
	private final List<Employee> employees = new ArrayList<>() ;
	private int nextId = 100;
	
	public List<Employee> getAllEmployees(){
		return employees;
		}
	public Employee getEmployeeById(int emp_id) {
		for(Employee employee : employees) {
			if(employee.getEmp_id().equals(emp_id)) {
				return employee;
			}
		}
		return null;
	}
	
	public Employee addEmployee(Employee employee) {
		employee.setEmp_id(nextId++);
		employee.add(employee);
		return employee;
	}
	
	public Employee updateEmployee(Employee updateEmployee) {
		Employee existingEmployee = getEmployeeById(updateEmployee.getEmp_id());
		if(existingEmployee!=Null) {
			existingEmployee.setEmp_name(updateEmployee.getEmp_name());
			existingEmployee.setEmp_age(updateEmployee.getEmp_age());
			existingEmployee.setEmp_city(updateEmployee.getEmp_city());
			existingEmployee.setEmp_designation(updateEmployee.getEmp_designation());
			
		}
	}
	
	

}
